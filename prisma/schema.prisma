generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  domain    String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
  users     User[]
}

model Department {
  id          String   @id @default(cuid())
  name        String   @unique
  isAdmin     Boolean  @default(false)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
}

model User {
  id                 String        @id @default(cuid())
  email              String        @unique
  name               String?
  password           String
  avatar             String?
  role               UserRole      @default(EDITOR)
  phone              String?
  location           String?
  address            String?
  departmentId       String?
  publicToken        String?       @unique
  emailNotifications Boolean       @default(true)
  twoFactorEnabled   Boolean       @default(false)
  twoFactorSecret    String?
  permissions        String[]      @default([])
  organizationId     String?
  deletedAt          DateTime?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  adminLogs          AdminLog[]
  events             Event[]
  interactions       Interaction[]
  messages           Message[]
  assignedTickets    Ticket[]      @relation("AssignedTickets")
  createdTickets     Ticket[]      @relation("CreatedTickets")
  agendaItems        AgendaItem[]  @relation("UserAgendaItems")
  resultItems        ResultItem[]  @relation("UserResultItems")
  reports            Report[]
  department         Department?   @relation(fields: [departmentId], references: [id])
  organization       Organization? @relation(fields: [organizationId], references: [id])

  @@index([role])
  @@index([departmentId])
  @@index([deletedAt])
  @@index([name]) // Índice para búsqueda por nombre
  @@index([email]) // Índice para búsqueda por email (además del unique)
  @@index([createdAt]) // Índice para ordenamiento por fecha
  @@index([organizationId])
  // Índice compuesto para búsquedas más eficientes
  @@index([deletedAt, role, departmentId])
}

model Ticket {
  id             String         @id @default(cuid())
  number         Int            @unique @default(autoincrement())
  subject        String
  description    String?
  status         TicketStatus   @default(OPEN)
  priority       TicketPriority @default(NORMAL)
  type           TicketType?
  hours          Float?
  tags           String[]
  attachments    String[]
  customerId     String
  assigneeId     String?
  categoryId     String?
  organizationId String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  events         Event[]
  interactions   Interaction[]
  messages       Message[]
  assignee       User?          @relation("AssignedTickets", fields: [assigneeId], references: [id])
  category       Category?      @relation(fields: [categoryId], references: [id])
  customer       User           @relation("CreatedTickets", fields: [customerId], references: [id])
  organization   Organization?  @relation(fields: [organizationId], references: [id])

  @@index([status])
  @@index([customerId])
  @@index([assigneeId])
  @@index([updatedAt])
  @@index([createdAt])
  @@index([priority])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  email     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
}

model Message {
  id          String      @id @default(cuid())
  content     String
  type        MessageType @default(COMMENT)
  isInternal  Boolean     @default(false)
  ticketId    String
  authorId    String
  attachments String[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  author      User        @relation(fields: [authorId], references: [id])
  ticket      Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([authorId])
  @@index([createdAt])
}

model Interaction {
  id          String          @id @default(cuid())
  type        InteractionType
  title       String
  description String?
  metadata    Json?
  userId      String
  ticketId    String?
  createdAt   DateTime        @default(now())
  ticket      Ticket?         @relation(fields: [ticketId], references: [id])
  user        User            @relation(fields: [userId], references: [id])
}

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String      @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime?
  allDay      Boolean     @default(false)
  color       String?
  type        EventType   @default(TASK)
  status      EventStatus @default(PENDING)
  ticketId    String?
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  ticket      Ticket?     @relation(fields: [ticketId], references: [id])
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([startDate])
  @@index([ticketId])
}

model AgendaItem {
  id           String @id @default(cuid())
  project      String
  subproject   String?
  deliverable  String?
  link         String?
  responsible  String?
  date         String?
  status       String @default("Stand by")
  observations String?
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation("UserAgendaItems", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ResultItem {
  id           String @id @default(cuid())
  product      String?
  project      String
  description  String?
  status       String @default("En proceso")
  observations String?
  userId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation("UserResultItems", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AdminLog {
  id          String      @id @default(cuid())
  action      AdminAction
  adminId     String
  adminEmail  String
  targetEmail String
  targetName  String?
  details     Json?
  createdAt   DateTime    @default(now())
  admin       User        @relation(fields: [adminId], references: [id])

  @@index([createdAt])
  @@index([adminId])
}

enum UserRole {
  ADMIN
  COORDINATOR
  EDITOR
  VIEWER
}

enum TicketStatus {
  OPEN
  PENDING
  SOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum TicketType {
  INCIDENT
  CHANGE_REQUEST
  PROJECT
}

enum MessageType {
  COMMENT
  NOTE
  EMAIL
  WHATSAPP
  SYSTEM
}

enum InteractionType {
  CONVERSATION
  EMAIL_CHANGE
  ORDER
  ARTICLE_VIEW
  RECEIPT
}

enum EventType {
  TASK
  MEETING
  DEADLINE
  REMINDER
  MAINTENANCE
}

enum EventStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum AdminAction {
  CREATE_USER
  UPDATE_USER
  DELETE_USER
  SUSPEND_USER
  UNSUSPEND_USER
}

model Report {
  id          String   @id @default(cuid())
  name        String
  date        String
  type        String
  status      String   @default("Disponible")
  size        String   @default("-")
  url         String?
  description String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
}

model WordPressUser {
  id               Int       @id // ID del usuario en WordPress
  email            String    @unique
  username         String?
  name             String?
  isSuspended      Boolean   @default(false)
  suspendedBy      String?   // ID del admin que suspendió
  suspendedAt      DateTime?
  suspensionReason String?
  notes            String?   // Notas adicionales sobre el usuario
  deletedAt        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([email])
  @@index([isSuspended])
  @@index([deletedAt])
}
