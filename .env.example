# Prisma Accelerate (para queries)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# Conexión directa (para migraciones)
DIRECT_URL="postgres://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require"

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-min-32-chars"
NEXTAUTH_URL="https://your-domain.vercel.app"

# Registration
REGISTRATION_ENABLED="false"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@domain.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Your App Name <your-email@domain.com>"

# Google Workspace Admin
# Email del admin que delegó acceso a la service account
GOOGLE_ADMIN_EMAIL="admin@tudominio.com"
# Customer ID (opcional, usa 'my_customer' por defecto)
GOOGLE_CUSTOMER_ID="my_customer"
# Credenciales (usa UNA de estas dos opciones):
# Opción 1: Ruta al archivo JSON (desarrollo local)
GOOGLE_APPLICATION_CREDENTIALS="./google-credentials.json"
# Opción 2: JSON completo como string (Vercel/producción)
# GOOGLE_CREDENTIALS_JSON='{"type":"service_account",...todo el JSON aquí...}'
